<UserControl x:Class="GUILayer.Views.BasicDataViews.BasicDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUILayer.Views.BasicDataViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Vilken grunddata vill du hantera?" FontWeight="Light" FontSize="55"
                   Foreground="Black" HorizontalAlignment="Center" Margin="0,45,0,10" Width="800"></Label>
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <Button  Margin ="162,10,37,10" Grid.Column="0"
                            FontSize="20"
                            Height="106"
                            Background="Transparent"
                         Command="">
                    <TextBlock>Provisionsandels-<LineBreak/>tabell</TextBlock>
                </Button>
                <Button  Grid.Column="1"
                            FontSize="20"
                            Height="106"
                            Background="Transparent" Margin="34,10,156,10"
                            Command="">
                    <TextBlock>Grundbeloppstabell<LineBreak/>(Försäkringstyp)</TextBlock>
                </Button>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button  Grid.Column="0"
                         FontSize="20"
                         Height="106"
                         Background="Transparent" 
                         Margin="32,0,35.667,0"
                         Command="">
                    <TextBlock>Grundbelopp<LineBreak/>(Tillvalstyp)</TextBlock>
                </Button>
                <Button     Grid.Column="1"
                            FontSize="20"
                            Height="106"
                            Background="Transparent" 
                            Margin="32,0,35.667,0"
                            Command="">
                    <TextBlock>Ack.Värde Variabel<LineBreak/>(Försäkrings-/tillvalstyp)</TextBlock>
                </Button>
                <Button  Grid.Column="2"
                         FontSize="20"
                         Height="106"
                         Content="Semesterersättning"
                         Background="Transparent" 
                         Margin="32,0,35.667,0"
                         Command="">
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
